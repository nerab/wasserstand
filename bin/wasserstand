#!/usr/bin/env ruby

require 'bundler'
Bundler.require

require 'wasserstand'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.on("-v", "--[no-]verbose", "Run verbosely") do |v|
    options[:verbose] = v
  end
end.parse!

puts Wasserstand::Waterway['BODENSEE'].pegel.first.last.messwerte.first
